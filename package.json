{
  "name": "bold-ui",
  "version": "1.0.0-beta.50",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "homepage": "https://bold.bridge.ufsc.br",
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "react",
    "bold-ui",
    "bold design system"
  ],
  "files": [
    "lib",
    "icons"
  ],
  "repository": {
    "url": "https://github.com/laboratoriobridge/bold"
  },
  "sideEffects": false,
  "scripts": {
    "start": "yarn clean && tsc --watch",
    "clean": "rm -rf lib",
    "build": "yarn clean && tsc && webpack --mode=production",
    "prepublishOnly": "yarn build",
    "test": "yarn lint && TZ=UTC jest",
    "test:loki": "STORYBOOK_LOKI=true build-storybook && loki --requireReference --reactUri file:./storybook-static",
    "test:watch": "TZ=UTC jest --watch --collectCoverage=false",
    "lint": "eslint 'src/**/*.tsx' 'src/**/*.ts'",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "icons": "yarn icons:clean && yarn icons:svgr && yarn icons:index",
    "icons:clean": "rm -rf ./src/components/Icon/generated",
    "icons:svgr": "svgr --ext tsx --icon --template ./tools/IconTemplate.js --svgo-config svgo.config.json -d ./src/components/Icon/generated ./icons",
    "icons:index": "babel-node ./tools/generateIconsIndex.js",
    "now-build": "yarn --cwd site install && yarn build && yarn site:export",
    "sonar": "sonar-scanner",
    "site:start": "yarn --cwd site start",
    "site:build": "yarn --cwd site build",
    "site:export": "yarn site:build && touch site/public/.nojekyll && cp site/src/CNAME site/public/CNAME && build-storybook -o site/public/storybook",
    "site:deploy": "yarn site:export && gh-pages -d site/public -t"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@emotion/core": "11.0.0",
    "@emotion/css": "^11.9.0",
    "@emotion/react": "^11.9.0",
    "@popperjs/core": "2.11.5",
    "downshift": "6.1.7",
    "emotion": "11.0.0",
    "focus-trap-react": "8.11.0",
    "match-sorter": "6.3.1",
    "react-dnd": "16.0.1",
    "react-dnd-html5-backend": "16.0.1",
    "react-dropzone": "14.2.0",
    "react-popper": "2.3.0",
    "react-text-mask": "5.4.3",
    "react-transition-group": "4.4.2",
    "text-mask-addons": "3.8.0"
  },
  "devDependencies": {
    "@babel/core": "7.17.10",
    "@storybook/addon-a11y": "6.4.22",
    "@storybook/addon-actions": "6.4.22",
    "@storybook/addon-info": "6.0.0-alpha.2",
    "@storybook/addon-knobs": "6.4.0",
    "@storybook/addons": "6.4.22",
    "@storybook/core": "6.4.22",
    "@storybook/react": "6.4.22",
    "@svgr/cli": "6.2.1",
    "@testing-library/react": "13.2.0",
    "@testing-library/react-hooks": "8.0.0",
    "@types/jest": "27.5.0",
    "@types/lodash": "4.14.182",
    "@types/match-sorter": "6.0.0",
    "@types/node": "17.0.31",
    "@types/prop-types": "15.7.5",
    "@types/react": "18.0.8",
    "@types/react-dom": "18.0.3",
    "@types/react-text-mask": "5.4.11",
    "@types/react-transition-group": "4.4.4",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "argos-cli": "0.3.3",
    "awesome-typescript-loader": "5.2.1",
    "babel-cli": "6.26.0",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.5",
    "eslint": "8.14.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.5.0",
    "gh-pages": "3.2.3",
    "husky": "^7.0.4",
    "intl": "1.2.5",
    "jest": "28.1.0",
    "jest-cli": "28.1.0",
    "jest-emotion": "11.0.0",
    "lodash": "4.17.21",
    "loki": "0.29.0",
    "mockdate": "3.0.5",
    "prettier": "2.6.2",
    "pretty-quick": "3.1.3",
    "prop-types": "15.8.1",
    "react": "18.1.0",
    "react-docgen-typescript-loader": "3.7.2",
    "react-dom": "18.1.0",
    "react-test-renderer": "18.1.0",
    "ts-jest": "28.0.1",
    "typescript": "4.6.4",
    "uglifyjs-webpack-plugin": "2.2.0",
    "url-loader": "4.1.1",
    "waait": "1.0.5",
    "webpack": "5.72.0",
    "webpack-cli": "4.9.2"
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false,
        "chromeRetries": 3
      }
    }
  }
}
